<UserControl x:Class="Gestor_de_gastor.CambiarContraseña"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestor_de_gastor"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="450" Background="#EDEEEE">
    <Grid>
        <Label Content="Actualizar contraseña" HorizontalAlignment="Left" Margin="132,48,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Contraseña actual" HorizontalAlignment="Left" Margin="155,131,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtContraseñaAc" HorizontalAlignment="Left" Height="23" Margin="113,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <Button x:Name="btnActualizar" Content="Actualizar" HorizontalAlignment="Left" Margin="158,329,0,0" VerticalAlignment="Top" Width="131" RenderTransformOrigin="1.2,0.406"/>
        <Label Content="Contraseña nueva" HorizontalAlignment="Left" Margin="155,219,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtContraseñaNu" HorizontalAlignment="Left" Height="23" Margin="113,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>

    </Grid>
</UserControl>
