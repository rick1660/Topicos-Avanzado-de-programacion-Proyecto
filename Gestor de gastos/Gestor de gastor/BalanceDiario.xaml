                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <!--Grid título-->
                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <!--Dia numero-->
                        <ColumnDefinition/>
                        <!--Grid fecha y dia-->
                        <ColumnDefinition Width="auto"/>
                        <!--Ingreso total diario-->
                        <ColumnDefinition Width="auto"/>
                        <!--Gasto total diario-->
                    </Grid.ColumnDefinitions>

                    <!--Label dia numero-->
                    <Label Grid.Column="0" Grid.Row="0" Content="10" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="34"/>

                    <!--Grid mes y dia-->
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto "/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Grid.Row="0" Content="2020-12" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                        <Label Grid.Column="0" Grid.Row="1" Content="jue." HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                    </Grid>

                    <!--Label ingreso diario-->
                    <Label Grid.Column="2" Grid.Row="0" Content="$4570.00" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="20" Foreground="#1e88e5"/>

                    <!--Label gasto diario-->
                    <Label Grid.Column="3" Grid.Row="0" Content="0.00" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="20" Foreground="#e53935"/>


                </Grid>



                <!--Grid operacion dia 1-->
                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <!--Espacio para el grid detallado-->
                    </Grid.ColumnDefinitions>

                    <!--Operacion 1-->
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <!--Tipo de gasto / ingreso-->
                            <ColumnDefinition/>
                            <!--Grid para nota y cuenta de donde salió / entró el dinero-->
                            <ColumnDefinition Width="auto"/>
                            <!--Importe-->
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Salario"/>

                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
