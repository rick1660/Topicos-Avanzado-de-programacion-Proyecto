                        </Grid>

                        <Label Grid.Row="0" Grid.Column="2" Content="$500.00" Foreground="#e53935"/>
                    </Grid>

                    <!--Operacion 2-->
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <!--Tipo de gasto / ingreso-->
                            <ColumnDefinition/>
                            <!--Grid para nota y cuenta de donde salió / entró el dinero-->
