                        <!--Dia numero-->
                        <ColumnDefinition/>
                        <!--Grid fecha y dia-->
                        <ColumnDefinition Width="auto"/>
                        <!--Ingreso total diario-->
                        <ColumnDefinition Width="auto"/>
                        <!--Gasto total diario-->
