                        </Grid>

                        <Label Grid.Row="0" Grid.Column="2" Content="$4500.00" Height="48" VerticalAlignment="Bottom" Foreground="#1e88e5"/>
                    </Grid>

                    <!--Operacion 2-->
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
