                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Grid.Row="0" Content="2020-12" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                        <Label Grid.Column="0" Grid.Row="1" Content="mie." HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                    </Grid>

                    <!--Label ingreso diario-->
                    <Label Grid.Column="2" Grid.Row="0" Content="$0.00" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="20" Foreground="#1e88e5"/>

                    <!--Label gasto diario-->
                    <Label Grid.Column="3" Grid.Row="0" Content="$625.00" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="20" Foreground="#e53935"/>


                </Grid>




                <!--Grid operacion dia 1-->
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
